<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myColorBGinAdd"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP address of Server :"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="@color/myColorButtonAdd"/>

    <EditText
        android:id="@+id/etIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittext_additem"
        android:hint="0.0.0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/custom_button_add"
            android:textColor="#ffffff"
            android:id="@+id/btnCancel"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/custom_button_add"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:id="@+id/btnSubmit"/>
    </LinearLayout>
</LinearLayout>