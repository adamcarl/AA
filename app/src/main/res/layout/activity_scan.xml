        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myColorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etInputPONumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/custom_edittext"
                    android:gravity="center_horizontal"
                    android:hint="@string/scan_po_number"
                    android:inputType="number"
                    android:textColorHint="@color/myColorAppBarLayout" />

                <EditText
                    android:id="@+id/etInputItemCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/custom_edittext"
                    android:gravity="center_horizontal"
                    android:hint="@string/scan_item_code"
                    android:inputType="number"
                    android:textColorHint="@color/myColorAppBarLayout" />

                <Button
                    android:id="@+id/btnSearchItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:text="Submit"
                    android:textColor="@color/myColorButtonScan" />
            </LinearLayout>

